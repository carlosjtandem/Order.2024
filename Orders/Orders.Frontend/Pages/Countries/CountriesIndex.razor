<!--indica como la voy a rutear-->
@page "/countries"

<h3>Paises</h3>
<div class="mb-3">
    <a class="btn btn-primary" href="/countries/create">Nuevo país</a>
</div>

@* //Llamada a componente generico *@
<GenericList MyList="Countries">
    @* El loading es un componente que si no se lo envia entonces utiliza la imagen gif definida por default *@
    <Loading>
        <p>Loading personalizado </p>
    </Loading>
    <Body>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Pais</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Countries!)  //! porque puede ser null
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>
                            <a class="btn btn-warning">Editar</a>
                            <button class="btn btn-danger ">Borrar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>

